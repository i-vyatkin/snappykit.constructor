{
  "extends": ["stylelint-config-recommended", "stylelint-config-prettier"],
  "plugins": ["stylelint-prettier", "stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "ignores"]
      }
    ],
    "indentation": 2,
    "string-quotes": "single",
    "prettier/prettier": [
      true,
      {
        "singleQuote": true,
        "tabWidth": 2,
        "useTabs": false
      }
    ]
  }
}
